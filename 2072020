  playerTriangle.y = mouseY;

     rect(playerTriangle.x - playerTriangle.size, playerTriangle.y - playerTriangle.size, playerTriangle.x + playerTriangle.size, playerTriangle.y - playerTriangle.size, playerTriangle.x, playerTriangle.y + playerTriangle.size);
